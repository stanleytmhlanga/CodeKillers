@using MunicipalityValuations.Models
@model IList<MunicipalityValuations.Models.Municipality>
@{
    ViewBag.Title = "Home";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-lg-3">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Municipalitites</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@Model.Count</h1>
                            <small>Total number of municipalities</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="">
                <button class="btn btn-primary" data-target="#MunicipalityModal" data-toggle="modal">Add a Municipality</button>
            </div>
        </div>

        <div class="col-xs-12 p-m">
            <div class="ibox">
                <div class="ibox-content">
                    @if (Model.Count > 0)
                    {
                        <table class="table table-striped" id="MunicipalitesDataTable">
                            <thead>
                                <tr><th>#</th><th>Municipality ID</th><th>Municipality</th><th>Action</th></tr>
                            </thead>
                            <tbody>
                                @foreach (var municipality in Model)
                                {
                                    <tr>
                                        <td>@Model.IndexOf(municipality)</td>
                                        <td>@municipality.MunicipalityIdentificationNumber</td>
                                        <td>@municipality.Name</td>
                                        <td>
                                            @Html.ActionLink("View", "ViewMunicipalityValuations", new {id = municipality.MunicipalityId})
                                            &nbsp;<span class="badge badge-info">@municipality.Valuations.Count valuations</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_AddMunicipality")

